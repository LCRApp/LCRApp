<HomeScreen>:
    BoxLayout:
        orientation: 'vertical'
        Image:
            source: 'images/background_agriculture.png'  # Image d'un champ ou d'un tracteur
            allow_stretch: True
            keep_ratio: False
        BoxLayout:
            orientation: 'vertical'
            size_hint_y: None
            height: '20dp'
            padding: 20
            Label:
                text: "Lutte Contre les Ravageurs (LCR)"
                font_size: '30dp'
                color: 0.2, 0.5, 0.2, 1  # Vert forêt
                halign: 'center'
                valign: 'middle'

        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: None
            height: '60dp'
            padding: '10dp'
            spacing: '10dp'
            Button:
                text: "Reconnaissance"
                background_color: 0.4, 0.6, 0.8, 1  # Bleu doux
                on_press: app.root.current = 'recognition'
            Button:
                text: "Prévention"
                background_color: 0.2, 0.7, 0.3, 1  # Vert doux
                on_press: app.root.current = 'prevention'
            Button:
                text: "Solutions"
                background_color: 0.8, 0.5, 0.2, 1  # Orange doux
                on_press: app.root.current = 'solutions'
            Button:
                text: "Formations"
                background_color: 0.7, 0.4, 0.6, 1  # Violet doux
                on_press: app.root.current = 'formations'

<RecognitionScreen>:
    BoxLayout:
        orientation: 'vertical'
        Image:
            source: 'images/background_pest_recognition.png'
            allow_stretch: True
            keep_ratio: False
        Label:
            text: "Reconnaissance des Ravageurs"
            font_size: '28dp'
            color: 1, 1, 1, 1  # Blanc
            halign: 'center'
        BoxLayout:
            size_hint_y: None
            height: '50dp'
            Button:
                text: "Retour"
                background_color: 0.5, 0.5, 0.5, 1
                on_press: root.on_button_click()

